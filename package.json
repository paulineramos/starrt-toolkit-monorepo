{
  "name": "monorepo-toolkit",
  "private": true,
  "scripts": {
    "build": "pnpm run --parallel -r build",
    "build:client": "pnpm --filter \"client\" run build",
    "build:server": "pnpm --filter \"server\" run build",
    "clean": "rimraf **/dist **/build **/coverage",
    "dev": "pnpm run --parallel -r dev",
    "dev:client": "pnpm --filter \"client\" run dev",
    "dev:server": "pnpm --filter \"server\" run dev",
    "format": "pnpm run -r --aggregate-output format",
    "format:client": "pnpm --filter \"client\" run format",
    "format:server": "pnpm --filter \"server\" run format",
    "lint": "pnpm run -r --aggregate-output lint",
    "lint:client": "pnpm --filter \"client\" run lint:fix",
    "lint:server": "pnpm --filter \"server\" run lint:fix",
    "test": "pnpm run -r --aggregate-output test",
    "test:client": "pnpm --filter \"client\" run test",
    "test:server": "pnpm --filter \"server\" run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/eslint-plugin": "^1.1.10",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.2",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=22.10.0",
    "npm": ">=10"
  }
}
